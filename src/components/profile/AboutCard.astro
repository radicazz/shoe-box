---
import EffectCard from '../ui/EffectCard.astro';

export interface Props {
  text?: string;
  skills?: string[];
}

const { text, skills = [] } = Astro.props as Props;
const skillList = skills.filter(Boolean);
---
{(text || skillList.length > 0) && (
  <EffectCard variant="glow" class="flex flex-col text-left text-base leading-relaxed">
    {text && (
      <>
        <p class="text-sm font-semibold uppercase tracking-wide text-gray-500 dark:text-gray-400">About</p>
        <p class="mt-4">
          {text}
        </p>
      </>
    )}
    {skillList.length > 0 && (
      <div class="mt-6">
        <p class="text-sm font-semibold uppercase tracking-wide text-gray-500 dark:text-gray-400">Skills</p>
        <ul class="mt-3 flex flex-wrap gap-2 text-sm font-medium text-gray-800 dark:text-gray-100">
          {skillList.map((skill) => (
            <li class="rounded-full border border-gray-200/70 px-3 py-1 dark:border-gray-700/60">{skill}</li>
          ))}
        </ul>
      </div>
    )}
  </EffectCard>
)}
